<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/phyloDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="phylomon database" />

    <Button
        android:id="@+id/battle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phyloDatabase"
        android:layout_alignRight="@+id/phyloDatabase"
        android:layout_below="@+id/phyloDatabase"
        android:text="@string/Battle" />

    <Button
        android:id="@+id/My_Phylomon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/battle"
        android:layout_alignRight="@+id/battle"
        android:layout_below="@+id/battle"
        android:text="@string/My_Phylomon" />

</RelativeLayout>
